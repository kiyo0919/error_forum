<div class="sign">
  <h2>新規登録</h2>
  <table class="sign-table">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "mentors/shared/error_messages", resource: resource %>
      <tr>
        <th class="table-head">ユーザーネーム</th>
        <td class="table-body">
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <th class="table-head">メールアドレス</th>
        <td class="table-body">
          <%= f.email_field :email, autocomplete: "email" %>
        </td>
      </tr>
      <tr>
        <th class="table-head">パスワード</th>
        <td class="table-body">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <th class="table-head">パスワード<br>(確認用)</th>
        <td class="table-body">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
      <td colspan="2"><%= f.submit "新規登録する", class:"sign-btn" %></td>
    <% end %>
    </table>
</div>

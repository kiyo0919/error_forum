<main>
  <div class="mentor-show">
    <h3><%= @mentor.name %>のページ</h3>
    <%= link_to "編集", edit_mentor_path(@mentor) %>
  </div>
  <div class="mentor-errors">
    <h3><%= @mentor.name %>が投稿したエラー</h3>
    <table class="top-table">
      <thead class="top-thead">
        <tr>
          <th class="thead-item">タイトル</th>
          <th class="thead-item">学習フェーズ</th>
          <th class="thead-item">技術項目</th>
          <th class="thead-item">URL</th>
          <th class="thead-item">担当者</th>
        </tr>
      </thead>
      <tbody class="top-tbody">
        <% @mentor.supports.each do |error| %>
          <tr>
            <td class="tbody-item">
              <%= link_to error_path(error) do %>
                <%= error.title %>
              <% end %>
            </td>
            <td class="tbody-item"><%= error.learning_phase_i18n %></td>
            <td class="tbody-item"><%= error.used_technology.name %></td>
            <td class="tbody-item"><a href=<%= error.url %> target="_blank" rel="noopener noreferrer"><%= error.url %></a></td>
            <td class="tbody-item"><%= error.mentor_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>